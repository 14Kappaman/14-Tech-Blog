
 
<div class="block">
    <form action="/api/user/login" method="post">
    <div>
        <label>Name</label>
        <input name="name" type="text"/>
    </div>
    <div>
        <label>Email</label>
        <input name="email" type="text"/>
    </div>
    <div>
        <label>Password</label>
        <input name="password" type="password"/>
    </div>
    <br>
    <input type="submit" value="Log In"></input>
</form>

 {{#if err}}
<div>
  {{err.message}}
</div>
{{/if}}  
</div>    